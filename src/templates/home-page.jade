			picMod: 'tape',
			title: '21 год',
			subTitle: 'в отрасли',
			descrTop: 'Компания "Штрих.ру"',
			descrBot: 'на рынке с 1996 года.'
			},{
			picMod: 'peoples',
			title: '83',
			subTitle: 'специалиста',
			descrTop: 'Высококвалифицированный и',
			descrBot: 'компетентный персонал компании'
			},{
			picMod: 'building',
			title: '3',
			subTitle: 'города',
			descrTop: 'Мы открыли офисы продаж',
			descrBot: 'в разных городах'
